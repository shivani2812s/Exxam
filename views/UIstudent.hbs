    <div class="maindiv">
      <div class="left">
        <div class="studentHeading">
                <button id="btn" onclick=><h2 style="color: white;">Student Dashboard </h2></button>
            </div>
      </div>
      <div class="right">

        <div class="navbar">
          <div class="searchbar"><input
