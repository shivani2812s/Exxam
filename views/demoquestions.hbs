<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Questions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            text-align: center;
        }
        .options-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .option {
            margin: 0 10px;
        }
        .btn {
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Create Questions</h1>
        <div class="options-container">
            <button class="option btn" onclick="selectOption('choice')">Create Choice Questions</button>
            <button class="option btn" onclick="selectOption('text')">Create Text Questions</button>
        </div>
        <div id="questions-container" style="display: none;">
            <!-- Questions form will be displayed here based on the option selected -->
        </div>
    </div>

    <script>
        function selectOption(option) {
            const questionsContainer = document.getElementById('questions-container');
            questionsContainer.innerHTML = ''; // Clear previous content

            if (option === 'choice') {
                // Display form for creating choice questions
                questionsContainer.innerHTML = `
                    <h2>Create Choice Questions</h2>
                    <!-- Your HTML form for creating choice questions goes here -->
                `;
            } else if (option === 'text') {
                // Display form for creating text questions
                questionsContainer.innerHTML = `
                    <h2>Create Text Questions</h2>
                    <!-- Your HTML form for creating text questions goes here -->
                `;
            }

            questionsContainer.style.display = 'block'; // Show the questions container
        }
    </script>
</body>
</html>


