<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Objective Questions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        label {
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"],
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type="submit"] {
            background-color: #6943CE;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            display: block;
            margin: 20px auto 0;
        }

        input[type="submit"]:hover {
            background-color: #5d36af;
        }

        /* Responsive CSS */
        @media screen and (max-width: 600px) {
            .form-container {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <h2>Upload Objective Questions</h2>

    <div class="form-container">
        <form action="/questions/create/objective" method="POST">
            <div class="form-group">
                <label for="class">Class:</label>
                <select id="class" name="classname" required>
                    <option value="">Select Class</option>
                    <option value="class1">Class 1</option>
                    <option value="class2">Class 2</option>
                    <!-- Add more options as needed -->
                </select>
            </div>

            <div class="form-group">
                <label for="examType">Exam Type:</label>
                <select id="examType" name="examType" required>
                    <option value="">Select Exam Type</option>
                    <option value="midTerm">Mid Term</option>
                    <option value="finalExam">Final Exam</option>
                    <!-- Add more options as needed -->
                </select>
            </div>

            <div class="form-group">
                <label for="duration">Duration (in minutes):</label>
                <input type="number" id="duration" name="duration" required>
            </div>

            <div id="questions">
                <div class="question">
                    <h3>Question 1</h3>
                    <div class="form-group">
                        <label for="questionHeading1">Question Heading:</label>
                        <input type="text" id="questionHeading1" name="questionHeading[]" required>
                    </div>

                    <div class="form-group">
                        <label for="options1">Options (comma-separated):</label>
                        <input type="text" id="options1" name="options[]" required>
                    </div>
                </div>
            </div>

            <button type="button" onclick="addQuestion()">Add Another Question</button>

            <input type="submit" value="Upload Questions">
        </form>
    </div>

    <script>
        let questionCount = 1;

        function addQuestion() {
            questionCount++;
            const questionsContainer = document.getElementById('questions');

            const questionDiv = document.createElement('div');
            questionDiv.className = 'question';
            questionDiv.innerHTML = `
                <h3>Question ${questionCount}</h3>
                <div class="form-group">
                    <label for="questionHeading${questionCount}">Question Heading:</label>
                    <input type="text" id="questionHeading${questionCount}" name="questionHeading[]" required>
                </div>

                <div class="form-group">
                    <label for="options${questionCount}">Options (comma-separated):</label>
                    <input type="text" id="options${questionCount}" name="options[]" required>
                </div>
            `;

            questionsContainer.appendChild(questionDiv);
        }
    </script>
</body>
</html>
